{
    "name": "slim-skeleton-OO",
    "description": "Skeleton of slimframework with twig, eloquent and controller, in OO paradigm",
    "keywords": ["rest","router", "psr7"],
    "license": "MIT",
    "authors": [
        {
            "name": "Paulo Mariano",
            "email": "paulo.tiago.pt@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require": {
        "php": ">=7.0.0",
        "slim/slim": "^3.1",
        "slim/twig-view": "^2.0",
        "illuminate/database": "~5.1"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit"
    }
}